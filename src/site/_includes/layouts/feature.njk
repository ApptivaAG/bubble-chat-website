---
layout: default
---
<div class="feature container">

  {% if eleventyNavigation %}
    {% set navPages = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key) %}
    <div class="breadcrumb">
      <ul>
        <li class="other-page">
          <a href="/">
            <div style="padding-top: 2px;">
              <svg viewBox="64 64 896 896" focusable="false" data-icon="home" width="1em" height="1em" fill="currentColor" aria-hidden="true"><path d="M946.5 505L560.1 118.8l-25.9-25.9a31.5 31.5 0 00-44.4 0L77.5 505a63.9 63.9 0 00-18.8 46c.4 35.2 29.7 63.3 64.9 63.3h42.5V940h691.8V614.3h43.4c17.1 0 33.2-6.7 45.3-18.8a63.6 63.6 0 0018.7-45.3c0-17-6.7-33.1-18.8-45.2zM568 868H456V664h112v204zm217.9-325.7V868H632V640c0-22.1-17.9-40-40-40H432c-22.1 0-40 17.9-40 40v228H238.1V542.3h-96l370-369.7 23.1 23.1L882 542.3h-96.1z"></path></svg>
            </div>
          </a>
        </li>
      {%- for entry in navPages %}
        <li {% if loop.last %} class="parent-page" {% else %}  class="other-page" {% endif %}>
          <a href="{{ entry.url }}">{{ entry.title }}</a>
        </li>
      {%- endfor %}
      <li class="active-page">
        {{ eleventyNavigation.key }}
      </li>
      </ul>
    </div>
  {% endif %}

  <div class="feature-content">
    <h1>
      {% if displayTitle %}
          {{ displayTitle | safe }}
      {% else %}
          {{ title }}
      {% endif %}
    </h1>

    {% if not rootTag and not eleventyNavigation %}
      <div class="tags">
        <ul>
          {%- for tag in tags -%}
            <li>
            {%- set tagUrl %}/funktionen/{{ tag | slug }}/{% endset -%}
              <a href="{{ tagUrl | url }}">{{ tag }}</a>
            </li>
          {%- endfor %}
        </ul>
      </div>
    {% endif %}

    {{ content | safe }}

  </div>
</div>

{% if rootTag %}
  {% set postslist = collections[rootTag] %}
  {% if postslist %}
  
    <a id="related" style="display:block; position:relative; top:-50px; visibility: hidden;"></a>

    <div style="background-color: #f5f5f7; margin-top: 4rem; padding-top: 3rem; padding-bottom: 4rem;">
      <div class="container">

        {% if followUpTopicTitle %}
          <h2 style="margin-bottom: 2rem;">{{followUpTopicTitle}}</h2>
        {% else %}
          <h2 style="margin-bottom: 2rem;">Die wichtigsten {{rootTag}} Funktionen im Detail</h2>
        {% endif %}

        {% if followUpTopicDescription %}
          <p>{{followUpTopicDescription |Â safe}}</p>
        {% endif %}

        {# Hack, damit partials/feature-list.njk funktioniert. Keine Ahnung, wo das Problem liegt... #}
        <!-- {% jpgUrl "/img/og-image.png", 500 %} -->

        {% include 'partials/feature-list.njk' %}
      </div>
    </div>
  {% else %}
    <br/>
    <br/>
  {% endif %}
{% endif %}

{% include 'sections/cta-request-demo-dark.njk' %}

<div class="feature-footer container">
  <section>
    {% contactPersonCode contactPerson, "Etwas unklar?<br/>Fragen Sie $name." %}
  </section>
  <section>
    <h3>Auswahl unserer Kunden</h3>
    {% include 'partials/customers.njk' %}
  </section>
</div>
