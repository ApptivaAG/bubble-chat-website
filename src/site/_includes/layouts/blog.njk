---
layout: default
---

{% set previousPost1 = collections.blog | getPreviousCollectionItem(page) %}
{% if previousPost1 %}
  {% set previousPost2 = collections.blog | getPreviousCollectionItem(previousPost1) %}
{% endif %}
{% if previousPost2 %}
  {% set previousPost3 = collections.blog | getPreviousCollectionItem(previousPost2) %}
{% endif %}
{% set nextPost1 = collections.blog | getNextCollectionItem(page) %}
{% if nextPost1 %}
  {% set nextPost2 = collections.blog | getNextCollectionItem(nextPost1) %}
{% endif %}
{% if nextPost2 %}
  {% set nextPost3 = collections.blog | getNextCollectionItem(nextPost2) %}
{% endif %}

<div class="blog">

  <div class="container">

  <h1>{{ title | safe }}</h1>

  {% if image %}
    {% image "/site" + image, title, {"class":"feature-img"} %}
  {% endif %}

  <div class="content-wrapper">
    <div class="content">
      {{ content | safe }}

      <div class="share-icons">
        <ul>
          <li>
